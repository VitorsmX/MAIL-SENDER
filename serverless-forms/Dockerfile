FROM node:lts

WORKDIR /app

COPY . .

RUN npm install

ARG MESSAGE
ENV MESSAGE=$MESSAGE
ARG TO
ENV TO=$TO
ARG FROM
ENV FROM=$FROM
ARG PORT
ENV PORT=$PORT
ARG FORM
ENV FORM=$FORM
ARG EMAIL_HOST
ENV EMAIL_HOST=$EMAIL_HOST
ARG EMAIL_PORT
ENV EMAIL_PORT=$EMAIL_PORT
ARG EMAIL_USER
ENV EMAIL_USER=$EMAIL_USER
ARG EMAIL_PASS
ENV EMAIL_PASS=$EMAIL_PASS

EXPOSE 8000
CMD ["node", "."]
